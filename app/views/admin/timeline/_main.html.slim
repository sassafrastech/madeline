#timeline-table
  section.timeline-table data-project-id= project.id

    = render "admin/timeline/top_controls", project: project

    .table-wrapper
      = render "admin/timeline/table", project: project

    #duplicate-step-modal
      .modal

    / This modal is used to display the edit log modal in the timeline view.
    div#log-form-modal

    / This modal is used to display a list of logs for a given step.
    div.modal.fade tabindex="-1" role="dialog" aria-labelledby="" id="log-list-modal" data-backdrop="static"
      div.modal-dialog.modal-lg
        div.modal-content
          div.modal-header
            button.close type="button" data-dismiss="modal" aria-label== t(:close)
              span aria-hidden="true" &times;
            h4.modal-title = t("log.logs")
          div.modal-body
            section.log-list
          div.modal-footer
            a.btn.btn-default data-dismiss="modal" = t(:close)

javascript:
  $(function() {
    new MS.Views.TimelineTableView({
      projectId: #{json project.id},
      stepModal: new MS.Views.ProjectStepModalView()
    });
  });
