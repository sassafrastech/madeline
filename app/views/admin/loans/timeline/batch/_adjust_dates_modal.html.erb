<div class="modal fade" id="adjust-dates-modal" tabindex="-1"
  aria-labelledby="adjust-dates-label">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
          aria-label="<%= t(:cancel) %>">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="adjust-dates-label">
          Adjust Scheduled Dates
          </h4>
      </div>
      <div class="modal-body">
        <span>Move scheduled dates</span>

        <div class="btn-group-vertical" role="group" aria-label="...">

        <div class="btn-group-vertical button-group-radios" data-toggle="buttons" aria-label="">
            <label class="btn btn-default">
              <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1">
              <span>
                + forward
              </span>
            </label>
            <label class="btn btn-default">
              <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
              <span>
                - backward
              </span>
            </label>
        </div>

        <input type="number" min="1" max="365" />

        <span>days</span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t(:cancel) %>
        </button>
        <a id="adjust-dates-confirm" data-method-key="PATCH"
          data-action-key="/project_steps/adjust_dates"
          class="btn btn-primary action batch-action">
          <%= t("loan.adjust_dates") %>
        </a>
      </div>
    </div>
  </div>
</div>
