.summary-table.breakeven-table
  table.table
    thead
      tr.table-title
        th colspan="4" = t("loan_report.breakeven_table.title")

    tbody
      / Revenue
      tr.group-title
        td colspan="4" = t("loan_report.breakeven_table.revenue")

      tr.group-columns
        td = t("loan_report.breakeven_table.product_name")
        td.text-right = t("loan_report.breakeven_table.quantity")
        td.text-right = t("loan_report.breakeven_table.price")
        td.text-right = t("loan_report.breakeven_table.total")

      - @breakeven_data[:revenue].each do |item|
        tr.group-content
          td = item[:name]
          td.text-right = item[:quantity]
          td.text-right = number_to_currency(item[:amount])
          td.text-right = number_to_currency(item[:total])

      tr.group-summary
        td colspan="3" = t("loan_report.breakeven_table.total_revenue")
        td.text-right = number_to_currency(@breakeven_data[:total_revenue])

      / Cost of Goods Sold
      tr.group-title
        td colspan="4" = t("loan_report.breakeven_table.cost_of_goods")

      tr.group-columns
        td = t("loan_report.breakeven_table.product_name")
        td.text-right = t("loan_report.breakeven_table.quantity")
        td.text-right = t("loan_report.breakeven_table.cost")
        td.text-right = t("loan_report.breakeven_table.total")

      - @breakeven_data[:cogs].each do |item|
        tr.group-content
          td = item[:name]
          td.text-right = item[:quantity]
          td.text-right = number_to_currency(item[:amount])
          td.text-right = number_to_currency(item[:total])

      tr.group-summary
        td colspan="3" = t("loan_report.breakeven_table.total_cost_of_goods")
        td.text-right = number_to_currency(@breakeven_data[:total_cogs])

      / Gross Margin
      tr.group-title.total
        td colspan="3" = t("loan_report.breakeven_table.gross_margin")
        td.text-right = number_to_currency(@breakeven_data[:gross_margin])

      / Fixed Costs
      tr.group-title
        td colspan="4" = t("loan_report.breakeven_table.fixed_costs")

      tr.group-columns
        td colspan="3" = t("loan_report.breakeven_table.cost")
        td.text-right = t("loan_report.breakeven_table.total")

      - @breakeven_data[:fixed_costs].each do |item|
        tr.group-content
          td colspan="3" = item[:name]
          td.text-right = number_to_currency(item[:amount])

      tr.group-summary
        td colspan="3" = t("loan_report.breakeven_table.total_fixed_costs")
        td.text-right = number_to_currency(@breakeven_data[:total_fixed_costs])

      / Net Margin
      tr.group-title.total
        td colspan="3" = t("loan_report.breakeven_table.net_margin")
        td.text-right = number_to_currency(@breakeven_data[:net_margin])
