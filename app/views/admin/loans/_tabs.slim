ul class="nav nav-tabs nav-tabs-responsive hidden-print" role="tablist"
  = render "admin/loans/tab", identifier: "details", label: t("loan.details"), tab_class: "active", link_class: "edit-tab"
  = render "admin/loans/tab", identifier: "questions", label: t("loan.questions"), tab_class: "", link_class: "questions-tab"
  = render "admin/loans/tab", identifier: "timeline-table", label: "Timeline - Table", tab_class: "", link_class: "timeline-table-tab"
  = render "admin/loans/tab", identifier: "timeline-list", label: "Timeline - List", tab_class: "", link_class: "timeline-tab"
  = render "admin/loans/tab", identifier: "loan-calendar", label: t(:calendar), tab_class: "", link_class: "calendar-tab"

div class="tab-content"
  div role="tabpanel" class="tab-pane active flush" id="details"
    = render "admin/loans/details", loan: @loan

  div role="tabpanel" class="tab-pane" id="questions"
    section.questionnaires
      div.questionnaires-content

  div role="tabpanel" class="tab-pane" id="timeline-table"
    = render "admin/loans/timeline/table/main", loan: @loan

  div role="tabpanel" class="tab-pane" id="timeline-list"
    = render "admin/loans/timeline/list/timeline", loan: @loan

  div role="tabpanel" class="tab-pane" id="loan-calendar"
    = render "admin/calendar/calendar", loan: @loan
