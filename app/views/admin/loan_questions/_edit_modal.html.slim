= simple_form_for([:admin, @loan_question],
    remote: true,
    html: { \
      class: 'form-horizontal organization-record',
      'data-id' => @loan_question.id,
    },
    wrapper: :horizontal_form_condensed,
    defaults: { \
      input_html: {class: 'form-element form-control'},
    },
  ) do |f|
  
  .modal-header
    h4.modal-title = t '.title'
  .modal-body
    = f.error_notification
    = f.input :label, label: t('.label_label')
    = f.input :data_type, label: t('.data_type_label')

  .modal-footer
    button.btn.btn-default type="button" data-dismiss="modal" = t :cancel
    = f.submit 'Save', class: 'update-action btn btn-success'
      
