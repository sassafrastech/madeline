= render view_path('common/errors'), { errors: @item.errors }

= form_for @item, :url => form_url(@item) do |f|
  = f.hidden_field :project_step_id

  table
    tr
      td Person
      td = f.select(:agent_id, person_select_options(@item.agent_id), {include_blank: '---'})
    tr
      td Progress Metric
      td = f.select(:progress_metric_value, options_for_select(ProjectLog.progress_metric_option_set.translated_list, @item.progress_metric_value), {include_blank: '---'})
    tr
      td Date
      td = f.text_field :date
    tr
      td Summary
      td = f.text_area :summary
    tr
      td Details
      td = f.text_area :details
    tr
      td Additional Notes
      td = f.text_area :additional_notes
    tr
      td Private Notes
      td = f.text_area :private_notes
    tr
      td
      td
        br
        = f.submit

