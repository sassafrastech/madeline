= render view_path('common/show_header')

table
  tr
    td Division
    td = @item.division.try(:name)
  tr
    td Name
    td = @item.name
  tr
    td Legal Name
    td = @item.legal_name
  tr
    td Telephone
    td = @item.primary_phone
  tr
    td Email
    td = @item.email
  tr
    td Primary Contact
    td
      - if @item.primary_contact
        = link_to @item.primary_contact.name, item_path(@item.primary_contact)
  tr
    td Contact Notes
    td = @item.contact_notes
  tr
    td Street Address
    td = @item.street_address
  tr
    td Neighborhood
    td = @item.neighborhood
  tr
    td City
    td = @item.city
  tr
    td State
    td = @item.state
  tr
    td Country
    td = @item.country.try(:name)
  tr
    td Website
    td = @item.website
  tr
    td Sector
    td = @item.sector
  tr
    td Industry
    td = @item.industry
  tr
    td Is Recovered
    td = @item.is_recovered
  tr
    td Source
    td = @item.referral_source
  tr
    td Tax ID
    td = @item.tax_no
  tr
    td Dynamic Translatable Test
    td = render view_path('common/translations'), {items: @item.dynamic_translatable_test_list}
  tr
    td Created At
    td = @item.created_at
  tr
    td Updated At
    td = @item.updated_at
  tr
    td Members
    td
      - for person in @item.people
        = link_to person.name, item_path(person)
        br
hr
