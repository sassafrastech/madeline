br

- if params[:all_loans]
  - loans = @item.loans
  b All Loans
  |  -
  =< link_to 'View Active loans', item_path(@item)

- else
  - loans = @item.active_loans
  =<> link_to 'View All loans', item_path(@item, { all_loans: 1 })
  |  -
  b  Active Loans

|  -
=< link_to 'New Loan', new_item_path(:loan, { organization_id: @item.id })
br
br

table border=1
  tr
    td ID
    td Signing date
    td Status
    td Loan Type
    td Amount
    td Summary
  - for loan in loans
    tr
      td = link_to loan.id, item_path(loan)
      td = loan.signing_date
      td = loan.status
      td = loan.loan_type
      td = loan.amount
      td = loan.summary


br
