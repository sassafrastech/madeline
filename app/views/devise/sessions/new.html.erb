<% content_for(:title, content = t("login")) %>

<% content_for(:alerts, content = (render "application/alerts")) %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),
  html: { class: "form-signin" }) do |f| %>

  <h2 class="form-signin-heading"><%= yield :title %></h2>

  <%= yield :alerts %>

  <div class="field">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, placeholder: t("email"),
      class: "text-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: t("password"),
      class: "text-input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field checkbox-field remember">
      <%= f.check_box :remember_me %>
      <% f.label :remember_me, class: "checkbox-label" %>
        <%= t("remember_me") %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t("login"), class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
