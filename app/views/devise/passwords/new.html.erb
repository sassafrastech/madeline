<% content_for(:title, t("user.forgot_password")) %>

<% content_for(:alerts, (render "application/alerts")) %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
  html: { method: :post, class: "form-signin" }) do |f| %>
  <h2 class="form-signin-heading"><%= yield :title %></h2>
  <p class="centered-text"><%= t("user.forgot_password_instructions") %></p>

  <%= yield :alerts %>

  <div class="field">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, placeholder: t("email") %>
  </div>

  <div class="actions">
    <%= f.submit t("user.send_instructions"),
      class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
